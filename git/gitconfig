[user]
	name = OKURA Masafumi
	email = masafumi.o1988@gmail.com
[include]
  path = ~/.gitconfig.local
[hub]
	protocol = https
[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = auto
[alias]
  a  = add
  f  = fetch
  l  = log
  ps = push
  pl = pull
  re = rebase
	co = checkout
	ss = status
	br = branch
	ci = commit
	mt = mergetool
	df = diff
  sw = switch
  hash = rev-parse HEAD
[merge]
	tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[rerere]
  enabled = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[interactive]
	; diffFilter = diff-so-fancy
