{
  "title": "Left Control to Hyper",
  "rules": [
    {
      "description": "Left Control to Hyper on hold, post left_control on pressed alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": [
                "left_command",
                "left_shift",
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    }
  ]
}
