[include]
  path = .gitconfig.local
[user]
	name = Okura Masafumi
	email = masafumi.o1988@gmail.com
[hub]
	protocol = https
[core]
	editor = vim
	excludesfile = ~/.gitignore
[color]
	ui = auto
[alias]
  a  = add
  f  = fetch
  l  = log
  ps = push
  pl = pull
  re = rebase
	co = checkout
	ss = status
	br = branch
	ci = commit
	mt = mergetool
	df = diff
[merge]
	tool = fugitive
[mergetool "gvimdiff"]
	cmd = mvimdiff
[mergetool "gvimdiff3"]
	cmd = mvimdiff -f \"$MERGED\" \"$LOCAL\" \"$REMOTE\"
[mergetool "gvimdiff2"]
	path = /usr/local/bin/mvimdiff
[mergetool "fugitive"]
  cmd = mvim -f -c \"Gvdiff\" \"$MERGED\" \"$LOCAL\"
[push]
	default = simple
[credential]
	helper = /opt/boxen/bin/boxen-git-credential
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[rerere]
  enabled = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
